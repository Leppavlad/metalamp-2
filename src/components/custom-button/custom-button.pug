mixin custom-button(options)
  - 
    const { 
      text, 
      content, 
      mode = "fill", 
      color = "main" 
      } = options;
    const classList = {
      "button": true, 
      "button_filled": mode === "fill",
      "button_void": mode === "void",
      "button_flat": mode === "flat",
      "button_main": color === "main",
      "button_alt": color === "alt",
      };
  case content
    when "arrow-left"
      button(class = classList, class = ["button_controller", "button_controller-left"]) 
        img(src="assets/icons/arrow_back.svg", alt="")
    when "arrow-right"
      button(class = classList, class = ["button_controller", "button_controller-right"])
        img(src="assets/icons/arrow_forward.svg", alt="")
    when "with-arrow"
      button(class = classList, class = "button_with-arrow")
        p= text
        include ../../assets/icons/arrow_forward.svg
    default
      button(class = classList)= text 